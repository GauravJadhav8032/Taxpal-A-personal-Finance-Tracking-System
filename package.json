{
  "name": "mean-app",
  "version": "1.0.0",
  "description": "MEAN Stack Application with Angular Frontend and Node.js/Express Backend",
  "main": "server/src/server.ts",
  "scripts": {
    "start": "concurrently \"npm run server:start\" \"npm run client:start\"",
    "server:start": "cd server && npm start",
    "server:dev": "cd server && npm run dev",
    "client:start": "cd client && npm start",
    "client:build": "cd client && npm run build",
    "client:test": "cd client && npm test",
    "server:test": "cd server && npm test",
    "test": "npm run client:test && npm run server:test",
    "build": "npm run client:build",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "clean": "rimraf node_modules client/node_modules server/node_modules client/dist server/dist"
  },
  "keywords": [
    "mean",
    "angular",
    "nodejs",
    "express",
    "mongodb",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express-validator": "^7.2.1",
    "nodemailer": "^7.0.6"
  }
}
